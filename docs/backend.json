{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the MoodyO application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "User's display name."
        }
      },
      "required": ["id", "email"]
    },
    "Playlist": {
      "title": "Playlist",
      "type": "object",
      "description": "Represents a user-created playlist.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Playlist entity."
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N Playlist)"
        },
        "name": {
          "type": "string",
          "description": "Name of the playlist."
        },
        "songIds": {
          "type": "array",
          "description": "References to Songs in this playlist. (Relationship: Playlist N:N Song)",
          "items": { "type": "string" }
        }
      },
      "required": ["id", "userId", "name"]
    },
    "Song": {
      "title": "Song",
      "type": "object",
      "description": "Represents a song in the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Song entity."
        },
        "title": {
          "type": "string",
          "description": "Title of the song."
        },
        "artist": {
          "type": "string",
          "description": "Artist of the song."
        },
        "src": {
          "type": "string",
          "description": "URL of the audio file.",
          "format": "uri"
        },
        "cover": {
          "type": "string",
          "description": "URL of the cover art.",
          "format": "uri"
        },
        "mood": {
          "type": "string",
          "description": "The primary mood associated with the song."
        }
      },
      "required": ["id", "title", "artist", "src", "cover", "mood"]
    },
    "UserSongPreference": {
      "title": "UserSongPreference",
      "type": "object",
      "description": "Represents a user's preference for a particular song, e.g., a 'like'.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the UserSongPreference entity."
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N UserSongPreference)"
        },
        "songId": {
          "type": "string",
          "description": "Reference to Song. (Relationship: Song 1:N UserSongPreference)"
        },
        "liked": {
          "type": "boolean",
          "description": "Indicates if the user has liked the song."
        }
      },
      "required": ["id", "userId", "songId", "liked"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Stores user profiles. Data is private; only the authenticated user can access their own profile."
        }
      },
      {
        "path": "/users/{userId}/playlists/{playlistId}",
        "definition": {
          "entityName": "Playlist",
          "schema": { "$ref": "#/backend/entities/Playlist" },
          "description": "Stores user-created playlists. Data is private to the owning user."
        }
      },
      {
        "path": "/users/{userId}/song_preferences/{songPreferenceId}",
        "definition": {
          "entityName": "UserSongPreference",
          "schema": { "$ref": "#/backend/entities/UserSongPreference" },
          "description": "Stores a user's song preferences (e.g., likes). Data is private to the owning user."
        }
      },
      {
        "path": "/songs/{songId}",
        "definition": {
          "entityName": "Song",
          "schema": { "$ref": "#/backend/entities/Song" },
          "description": "Stores all available songs. This collection is public to read for all authenticated users, but writable only by admins."
        }
      }
    ]
  }
}
