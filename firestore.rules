
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // In a real app, you would have an admin check, e.g., request.auth.token.isAdmin == true
    // For this prototype, we'll allow any authenticated user to act as an admin for the songs collection.
    function isAdmin() {
      return isSignedIn();
    }

    // User Profile Rules
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if isSignedIn();
    }

    // User-specific Subcollection Rules (Playlists, Preferences)
    match /users/{userId}/{collection}/{docId} {
      allow read, list, create, update, delete: if isOwner(userId);
    }
    
    // Global Songs Collection Rules
    match /songs/{songId} {
        // Any authenticated user can read the list of songs
        allow get, list: if isSignedIn();
        
        // Only "admins" can create, update, or delete songs
        allow create, update, delete: if isAdmin();
    }
  }
}
